.navbar.navbar-fixed-top{:role => "navigation"}
  .container
    .navbar-header
      %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only= t('title')
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{:href => "/"}= t('title')
    .navbar-collapse.collapse
      %ul.nav.navbar-nav.navbar-right
        %li.dropdown
          - if !user_signed_in?
            = link_to t('sign_in'), new_user_session_path
          - else
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              = current_user.name
              %b.caret
            %ul.dropdown-menu
              %li= link_to t('profile'), user_path(current_user)
              %li.divider
              %li= link_to t('sign_out'), destroy_user_session_path, :method => :delete
      - if user_signed_in? && current_user.admin?
        %ul.nav.navbar-nav
          %li= link_to User.model_name.human(:count => 2), users_path
      %ul.nav.navbar-nav
        %li= link_to Track.model_name.human(:count => 2), tracks_path