%td.mx-ref-buttons
  = link_to user_tracks_path(item), :class => 'btn btn-xs btn-default btn-icon' do
    %i.fa.fa-map-marker{'title' => Track.model_name.human(:count => 2)}
    %span= Track.model_name.human(:count => 2)
  - if item.permit_modify?(controller.permission_params)
    - if controller.ref_action?(:show)
      = link_to item, :class => 'btn btn-xs btn-default btn-icon' do
        %i.fa.fa-pencil-square-o{'title' => t('lib_support.refs.edit')}
        %span= t('lib_support.refs.edit')
    - if controller.ref_action?(:remove)
      = link_to '#', :class => 'btn btn-xs btn-danger btn-icon',    |
                     :'data-type' => controller.resource.sm_name,   |
                     :'data-action' => 'remove_single',             |
                     :'data-id' => item.get_id do
        %i.fa.fa-trash-o{'title' => t('lib_support.refs.remove')}
        %span= t('lib_support.refs.remove')