@import 'variables';

.track-items-drop-here {
  height: 42px;
  border: 2px dashed $hover_menu_item_color;
  text-align: center;
  line-height: 38px;

  &:after {
    content: '<%= I18n.t('drop_here') %>';
    text-align: center;
    width: 100%;
    padding: 0.1em 0;
    color: $hover_menu_item_color;
  }

  &.active {
    border: none;
    &:after { content: image_url('load.gif') }
  }

  &.dragging {
    border-color: $focus_color_btn;
    &:after { color: inherit }
  }
}

.gpx-file-select {
  display: block;
  font-size: 20px;
  margin-bottom: 1em;
  margin-top: 1em;
  &.active { color: $hover_menu_item_color }

  span {
    margin-left: 6px;
  }
}

.gpx-track-item {
  .mui-textfield {
    margin-bottom: 0;
    input {
      padding-right: 1em;
    }
  }

  .remove-addon {
    position: absolute;
    right: 3px;
    top: 23px;
    color: $hover_menu_item_color;
    cursor: pointer;

    &:hover, &:active {
      color: inherit;
    }
  }

  & + .gpx-track-item-color-picker {
    &.active { max-height: 20em; }
    transition: max-height 0.8s;
    overflow: hidden;
    max-height: 0;

    & + .gpx-track-item-color-marker {
      height: 0.8em;
      cursor: pointer;
    }
  }
}

#map {
  width: 100%;
  height: 100%;
}

#legend {
  .show-legend {
    display: none;
    text-align: center;
    cursor: pointer;
    color: $focus_color_btn;
  }

  &.hidden-legend {
    min-height: 0;
    width: 2em;
    padding: 0.1em;

    .show-legend { display: block }
  }

  position: absolute;
  width: 250px;
  background-color: $side_drawer_toggle_color;
  min-height: 20em;
  top: 1em;
  right: 1em;
  border: 1px $hover_menu_item_color solid;
  box-shadow: 0 0 10px rgba(0,0,0,0.5);
  padding: 1em;
  transition: all 0.8s;

  .info-header {
    display: table;
    padding-bottom: 0.2em;
    border-bottom: 1px $hover_menu_item_color solid;
    width: 100%;

    > * {
      display: table-cell;
      vertical-align: middle;
    }

    > h4 {
      margin: 0;
      word-break: break-word;
      padding-right: 0.3em;
    }

    > .hide-legend {
      text-align: right;
      cursor: pointer;
      &:hover .fa { color: maroon }
    }
  }

  .legend_text {
    width: 100%;
    outline: none;
    border: none;
    resize: none;
    max-height: 12em;
    overflow-y: auto;
    padding-top: 0.8em;
    overflow-x: hidden;
  }

  .legend_items {
    display: table;
    margin-top: 0.5em;

    > .legend_row {
      display: table-row;

      .legend_item {
        display: table-cell;
        padding: 0.25em 0 0.25em 0;
        word-break: break-all;
        vertical-align: middle;

        &.color {
          width: 1.5em;
          > div { min-height: 1.5em; }
        }

        &.item-checkbox { padding-right: 0.5em }

        &:last-child {
          padding-left: 0.5em
        }
      }
    }
  }
}

.lib-support-list[data-type="track"] {
  td, th {
    &[data-column-name="len"] {
      text-align: right;
      padding-right: 1.5em;
    }
  }
}

@media (max-width: $mobile_width) {
  .lib-support-list[data-type="track"] {
    td, th {
      &[data-column-name="len"], &[data-column-name="created_at"] { display: none }
    }

    td {
      .img-circle-avatar + a {
        display: none;
      }
    }
  }

  .track-items-drop-here { display: none }
}