@import 'variables';
@import 'bootstrap/variables';

.track-items-drop-here {
  height: 3em;
  border: 2px dashed $input-border;
  text-align: center;
  line-height: calc(3em - 4px);
  margin-bottom: $form-group-margin-bottom;

  &:after {
    content: '<%= I18n.t('drop_here') %>';
    text-align: center;
    width: 100%;
    padding: 0.1em 0;
    color: $btn-default-border;
  }

  &.active {
    border: none;
    &:after { content: image_url('load.gif') }
  }

  &.dragging {
    border-color: $input-border-focus;
    &:after { color: inherit }
  }
}

.gpx-file-select {
  display: block;
  font-size: $font-size-large;
  &.active { color: $btn-default-border }
}

.gpx-track-item {
  input {
    border-right: none;
    border-radius: $border-radius-base 0 0 0;
  }

  .input-group-addon {
    cursor: pointer;

    &:hover {
      &.color-addon { color: $brand-primary }
      &.remove-addon { color: $brand-danger }
    }

    &.remove-addon { border-left: none; }
    &.color-addon.active { color: $brand-primary }
  }

  &+.gpx-track-item-color-picker {
    &.active { max-height: 20em; }
    border-left: 1px solid $input-border;
    border-right: 1px solid $input-border;
    transition: max-height 0.8s;
    overflow: hidden;
    max-height: 0;

    .color-picker {
      margin-top: $form-group-margin-bottom;
      margin-bottom: $form-group-margin-bottom;

      .simplecolorpicker { padding: 0; }
    }

    &+.gpx-track-item-color-marker {
      height: 0.8em;
      margin-bottom: $form-group-margin-bottom;
      border-radius: 0 0 $border-radius-base $border-radius-base;
      cursor: pointer;
    }
  }
}

@media (max-width: $screen-xs-max) {
  .lib-support-list[data-type="track"] {
    td, th {
      &[data-column-name="public"], &[data-column-name="created_at"] { display: none }
    }
  }

  .track-items-drop-here { display: none }
}

#map {
  width: 100%;
  height: 100%;
}

#legend {
  position: absolute;
  width: 250px;
  background-color: $input-bg;
  min-height: 20em;
  top: 1em;
  right: 1em;
  border: 1px $input-border solid;
  box-shadow: 0 0 10px rgba(0,0,0,0.5);
  padding: 1em;

  .info {
    > h4 {
      margin: 0;
      padding-bottom: 0.2em;
      border-bottom: 1px $input-border solid;
    }

    > .legend_text {
      width: 100%;
      outline: none;
      border: none;
      resize: none;
      max-height: 12em;
      overflow-y: auto;
      padding-top: 0.8em;
      overflow-x: hidden;
    }
  }

  .legend_items {
    display: table;
    margin-top: 0.5em;

    > .legend_row {
      display: table-row;

      .legend_item {
        display: table-cell;
        padding: 0.25em 0 0.25em 0;
        word-break: break-all;
        vertical-align: middle;

        &.color {
          width: 1.5em;
          > div { min-height: 1.5em; }
        }

        &:last-child {
          padding-left: 0.5em
        }
      }
    }
  }
}