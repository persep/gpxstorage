@import 'variables';

.travel-icons {
  display: block;
  width: 100%;
  img {
    display: inline-block;
    padding: 2em 1em 2em 0;
    width: 10em;
    height: auto;
  }
}

#overlay {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  overflow: hidden;
  z-index: -1;

  > video {
    min-height: 100%;
    min-width: 100%;
    position: fixed;
    opacity: 0.7;
    filter: sepia(0.5);
    -webkit-filter: sepia(0.5);
  }

  .info-block {
    position: absolute;
  }
}

@media (max-width: $mobile_width) {
  .travel-icons img {
    width: 5em;
  }

  #overlay { display: none }
}

.app-header {
  color: <%= Track::DEFAULT_COLOR %>;
  h1 {
      text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.4);
  }
}

.footer {
  position: absolute;
  bottom: 0;
  right: 0;
  margin: 0 0.25em;
  font-weight: bold;
}